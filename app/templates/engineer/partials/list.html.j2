<ul class="touch-friendly-list">
    {% for item in items %}
        <li id="{{ item_type }}-{{ item.id }}" class="list-item"
                        hx-get="/engineer/{{ item_type.lower() }}s/{{ item.id }}/edit"
                        hx-target="#editFormContainer"
                        hx-trigger="click"
                        onclick="openModal('edit')">
            <div class="item-content">
                <strong>{{ item.name }}</strong>
            </div>
            <div class="item-actions">
                <button class="action-button delete-button overlay-button"
                        hx-delete="/engineer/{{ item_type.lower() }}s/{{ item.id }}"
                        hx-confirm="Are you sure you want to delete this {{ item_type }}?"
                        hx-trigger="click"
                        hx-target="#{{ item_type }}-{{ item.id }}"
                        hx-swap="delete"
                        onclick="event.stopPropagation()">
                    🗑️
                </button>
            </div>
        </li>
    {% endfor %}
</ul>
