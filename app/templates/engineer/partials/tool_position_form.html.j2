{# Shared tool position form partial that can be used for both create and edit #}
<div id="{{ modal_id }}" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h2>{{ title }}</h2>
        <form id="{{ form_id }}">
            <input type="hidden" id="{{ prefix }}ToolPositionIndex" value="">
            <label for="{{ prefix }}TpName">Name:</label>
            <input type="text" id="{{ prefix }}TpName" name="name" required>
            
            <label for="{{ prefix }}ToolType">Tool Type:</label>
            <select id="{{ prefix }}ToolType" name="tool_type">
                <option value="">Select Tool Type</option>
            </select>
            
            <label for="{{ prefix }}Tool">Tool:</label>
            <select id="{{ prefix }}Tool" name="tool_id" required>
                <option value="">Select Tool</option>
            </select>
            
            <h3>Tool Attributes</h3>
            <div id="{{ prefix }}ToolAttributes"></div>
            
            <h3>Tool Life Expectancy</h3>
            <label for="{{ prefix }}ExpectedLife">Expected Life:</label>
            <input type="number" id="{{ prefix }}ExpectedLife" name="expected_life" required>
            
            <button type="submit" class="btn-submit">{{ submit_text }}</button>
        </form>
    </div>
</div>
