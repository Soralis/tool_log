{% extends "dashboard/base.html.j2" %}
{% block title %}Reports{% endblock %}

{% block content %}
<div class="px-4 py-6">
  <div class="flex justify-between mb-4">
    <h2 class="text-2xl font-bold">Reports</h2>
    <button id="print-btn" class="px-4 py-2 bg-indigo-600 hover:bg-indigo-700 rounded text-white">Print / Save PDF</button>
  </div>
  <table id="reports-table" class="w-full divide-y divide-gray-700">
    <thead>
      <tr>
        <th class="px-4 py-2 text-left">Line</th>
        <th class="px-4 py-2 text-left">Product</th>
        <th class="px-4 py-2 text-left">Finished (Current)</th>
        <th class="px-4 py-2 text-left">Operation</th>
        <th class="px-4 py-2 text-left">Cost per Piece</th>
        <th class="px-4 py-2 text-left">% Change</th>
        <th class="px-4 py-2 text-left">Reason</th>
      </tr>
    </thead>
    <tbody>
      <!-- Report rows will be populated here -->
    </tbody>
  </table>
</div>
{% endblock %}

{% block scripts %}
<script type="module" src="{{ url_for('static', path='js/dashboard/reports.js') }}"></script>
{% endblock %}
