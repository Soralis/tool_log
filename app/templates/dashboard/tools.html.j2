{% extends "dashboard/base.html.j2" %}

{% block title %}Tool Life Monitoring{% endblock %}

{% block head %}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdn.jsdelivr.net/npm/moment@2.29.4/moment.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-moment@1.0.1/dist/chartjs-adapter-moment.min.js"></script>
<style>
    .graph-container {
        height: 200px;
    }
</style>
{% endblock %}

{% block subinfo %}
    <div class="flex items-center space-x-8 text-sm font-mono">
        <div class="flex justify-between">
            <div class="flex items-center">
                <div class="w-8 h-4 mr-2 ml-4 border-2 border-[rgb(75,192,192)] bg-[rgb(75,192,192)]/50"></div>
                <span>Tool Life</span>
            </div>
            <div class="flex items-center">
                <div class="w-8 h-4 mr-2 ml-4 border-t-2 border-dashed border-[rgb(255,99,132)]"></div>
                <span>Trendline</span>
            </div>
            <div class="flex items-center">
                <div class="w-8 h-4 mr-2 ml-4 border-t-2 border-dashed border-[rgb(255,206,86)]"></div>
                <span>Mean</span>
            </div>
            <div class="flex items-center">
                <div class="w-8 h-4 mr-2 ml-4 border-2 border-[rgb(255,206,86)] bg-[rgb(255,206,86)]/10"></div>
                <span>Mean ± Std Dev</span>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
<div class="p-2">
    <div class="mx-auto">
        {% include 'dashboard/partials/tool_details_modal.html.j2' %}
        <div class="grid grid-cols-1 lg:grid-cols-2 2xl:grid-cols-3 gap-4">
            {% for graph in graphs %}
            <div class="bg-gray-800 rounded-lg shadow p-4 cursor-pointer hover:bg-gray-700 transition-colors graph-card" 
                data-graph-id="{{ graph.id }}">
                <h3 class="text-lg font-medium text-gray-300 mb-2">{{ graph.title }}</h3>
                <div class="flex">
                    <div class="flex-1 -mr-16">
                        {% with graph_id=graph.id, graph_type=graph.type %}
                            {% include 'dashboard/partials/graph.html.j2' %}
                        {% endwith %}
                    </div>
                    <div class="text-sm font-mono text-gray-400 whitespace-nowrap pl-20 w-44" id="stats_{{ graph.id }}">
                        <div>Slope: --</div>
                        <div>Mean: --</div>
                        <div>σ: ±--</div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>

        {% if not graphs %}
        <div class="text-center py-12">
            <p class="text-gray-400 text-lg">No tool life data available. Add tools and record tool life measurements to see graphs.</p>
        </div>
        {% endif %}
    </div>
</div>

<!-- Connection Status -->
<div id="connection-status" class="fixed bottom-4 right-4 px-4 py-2 rounded-full text-white bg-yellow-500/100">
    Connecting...
</div>
{% endblock %}

{% block scripts %}
<script type="module">
    import { initializeComponents, cleanup } from '{{ url_for("static", path="js/dashboard/tools.js") }}';
    import { initializeDateRange } from '{{ url_for("static", path="js/dashboard/rangeSlider.js") }}';

    // Initialize components in the correct order
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize date range
        initializeDateRange();
        
        // Initialize page components
        initializeComponents();
    });

    // Cleanup on page unload
    window.addEventListener('beforeunload', cleanup);
</script>
{% endblock %}
