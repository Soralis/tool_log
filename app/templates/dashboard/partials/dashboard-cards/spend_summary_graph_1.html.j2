<div id="spendSummaryChart1"></div>
<script type="module">
  import { fetch_apex_data } from '/static/js/dashboard/apex.js';

    var options = {
          series: [],
          chart: {
            height: 450,
            type: 'heatmap',
            background: 'transparent'
          },
          dataLabels: {
            enabled: true
          },
          stroke: {
            width: 0
          },
          title: {
            text: 'HeatMap Chart with Color Range'
          },
          noData: {
            text: 'Loading...'
          },
          theme: {
              mode: 'dark' // Can also switch to 'light'
          }
        };

    let spendSummaryChart1 = new ApexCharts(document.querySelector("#spendSummaryChart1"), options);
    spendSummaryChart1.render();

  // Listen for filter changes and update the chart
    document.body.addEventListener('filterChanged', function() {
      console.log('wepk')
        fetch_apex_data(spendSummaryChart1, '/dashboard/api/spend-summary-1');
    });
</script>
