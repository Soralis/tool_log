<canvas id="spendSummaryChart" style="width:600px; height:600px;"></canvas>

<script>
  function renderSpendSummaryChart(chartData) {
    const labels = chartData.labels;
    const data = chartData.data;

    const ctx = document.getElementById('spendSummaryChart').getContext('2d');

    // Destroy existing chart if it exists
    if (window.myChart instanceof Chart) {
      window.myChart.destroy();
    }

    window.myChart = new Chart(ctx, {
      type: 'pie',
      data: {
        labels: labels,
        datasets: [{
          label: 'Spend Summary',
          data: data,
          backgroundColor: [
            'rgba(255, 99, 132, 0.2)',
            'rgba(54, 162, 235, 0.2)',
            'rgba(255, 206, 86, 0.2)',
            'rgba(75, 192, 192, 0.2)',
            'rgba(153, 102, 255, 0.2)',
            'rgba(255, 159, 64, 0.2)'
          ],
          borderColor: [
            'rgba(255, 99, 132, 1)',
            'rgba(54, 162, 235, 1)',
            'rgba(255, 206, 86, 1)',
            'rgba(75, 192, 192, 1)',
            'rgba(153, 102, 255, 1)',
            'rgba(255, 159, 64, 1)'
          ],
          borderWidth: 1
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: true,
        title: {
          display: true,
          text: 'Spend Summary'
        }
      }
    });
  }

  // Initial render with empty data
  renderSpendSummaryChart({ labels: [], data: [] });

  // Render chart with data from server
  renderSpendSummaryChart({{ chart_data|tojson }});
</script>
